<div>
  <%= form_for event_admin do |f| %>
    <header>
      <h1><%= event_admin.title %></h1>
      <%= f.select :venue, options_from_collection_for_select(Venue.all, :id, :name, event_admin.venue_id) %>
    </header>

    <div>
      <% event_admin.presentations.each do |presentation| %>
        <%= f.fields_for :presentations, presentation do |fp| %>
          <div>
            <%= fp.text_field :title %>
            <%= fp.select :status, ['submitted', 'postponed', 'done'] %>
          </div>
        <% end %>
      <% end %>
    </div>

    <footer>
      <%= link_to "Mark all as done", "" %>
      <%= f.submit "Update" %>
    </footer>
  <% end %>
</div>